<?xml version="1.0" encoding="UTF-8"?>
<decorators defaultdir="/decorators">
	<!-- Any urls that are excluded will never be decorated by Sitemesh -->
	<excludes>
		<pattern>/api*</pattern>
	</excludes>

	<!-- apply Sitemesh default template -->
	<decorator name="admin" page="admin.jsp">
		<pattern>/admin*</pattern>
	</decorator>
	<decorator name="web" page="web.jsp">
		<pattern>/*</pattern>
	</decorator>

	<decorator name="login" page="login.jsp">
		<pattern>/dang-nhap*</pattern>
	</decorator>
	<decorator name="checkout" page="checkout.jsp">
		<pattern>/checkout*</pattern>
	</decorator>
	<decorator name="sendmail" page="">
		<pattern>/gio-hang/sendmail*</pattern>
	</decorator>
	<decorator name="baotri" page="">
		<pattern>/bao-tri*</pattern>
	</decorator>
	<decorator name="libraries" page="">
		<pattern>/libraries*</pattern>
	</decorator>

</decorators>